<%= @recipe.id %>
<%= form_with model: @recipeFood, method: :post, local: true do |form| %>

    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
        <option selected>Select Food</option>
        <% @foods.each do |f| %>
        <option value=<%= f.id %>><%= f.name %></option>
        <% end %>
    </select> 


    <div class="mb-5 w-25">
        <%= form.label :description, "Qauntity", :class => "form-label" %>
        <%= form.text_field :description, placeholder: "Qauntity", required: true, :class => "form-control" %>
    </div>

    <div>
        <%= form.submit "Add", class: "btn btn-primary", disable_with: "Please wait..." %>
    </div>

<% end %>
