<div class='container'>
    <h1 class='text-center'> Food Details </h1>
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">Food</th>
            <th scope="col">Measurement Unit</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td> <%= @food.name %> </td>
                <td> <%= @food.measurement_unit %> </td>
                <td>$ <%= @food.price %> </td>
                <td>
                    <% if can? :destroy, @food %>
                        <%= button_to 'delete', food_path(@food.id), method: :delete %>
                    <% else %>
                        <%= link_to 'go back', foods_path %>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
</div>