<div class='container' >
    <p class='text-end'> <%= link_to 'Add Food', new_food_path, :class => 'btn btn-primary' %> </p>
    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @foods.each do |food| %>
            <tr>
                <td> <%= food.name %> </td>
                <td> <%= food.measurement_unit %> </td>
                <td>$ <%= food.price %> </td>
                <td> <%= link_to 'view', food_path(food.id) %> </td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>
